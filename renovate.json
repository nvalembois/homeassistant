{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "customManagers:dockerfileVersions"
  ],
  "packageRules": [
    {
      "matchFileNames": ["Dockerfile"],
      "groupName": "homeassistant",
      "pinDigests": true
    },
    {
      "matchDatasources": ["github-runners"],
      "groupName": "githubCi"
    }
  ]
}
